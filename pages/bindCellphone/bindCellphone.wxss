page {
  background-color: #efeff4;
  color: #000;
}
input::-webkit-input-placeholder {
  color: #b2b2b2;
}
.bindPhone-wrap {
  padding-top: 20px;
}
.verify-row {
  padding: 10px 0;
  background-color: #fff;
}
.item-name {
  display: inline-block;
  vertical-align: middle;
  width: 20%;
  text-align: center;
}
input {
  display:inline-block;
  width: 48%;
  margin-right: 2%;
  height: 20px;
  line-height: 20px;
  padding: 4px;
  font-size: 14px;
  color: #646464;
  vertical-align: middle;
}
.code-tel {
  width: 75%;
}
.next-step, .bind-new-tel-btn {
  display: block;
  width: 90%;
  line-height: 40px;
  margin: 20px auto;
  color: #fff;
  background-color: #09bb07;
  border: 1px solid #029400;
  border-radius: 4px;
  text-align: center;
}
.bind-new-tel-btn {
  opacity: 1;
}
.bind-new-tel-btn.disabled {
  opacity: 0.4;
}
.get-code-btn {
  display: inline-block;
  width: 25%;
  line-height: 20px;
  padding: 4px 0;
  font-size: 12px;
  vertical-align: middle;
  color: #09bb07;
  background-color: #fff;
  text-align: center;
  border: 1px solid;
}
.support-tip {
  font-size: 12px;
  color: #ccc;
  text-align: center;
}

